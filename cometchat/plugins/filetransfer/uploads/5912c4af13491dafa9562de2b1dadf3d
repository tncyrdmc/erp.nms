#include<stdio.h>
#include<stdlib.h>
#include<math.h>
#include<time.h>
#include<string.h>
#include<ctype.h>
int aux[500];
int opc;
void leeMatriz(int Mat[4][4])
{
     int i,j;
     for(i=0;i<4;i++)
                     for(j=0;j<4;j++)
                     {
                                     printf("Dar el elemento[ %i , %i ] :   ",i+1,j+1);
                                     fflush(stdin);
	                             	 gets(aux);
	                             	 Mat[i][j]=atoi(aux);
                     }
}
void ImprimeMat(int Mat[4][4])
{
     int i,j;
     for(i=0;i<4;i++)
     {
                    for(j=0;j<4;j++)
                                    printf("%i\t",Mat[i][j]);
                    printf("\n");
     }
}
void suma(int mat1[4][4],int mat2[4][4],int mat3[4][4])
{
     int i,j;
     for(i=0;i<4;i++)
                     for(j=0;j<4;j++)
                                     mat3[i][j]=mat1[i][j]+mat2[i][j];
}
void resta(int mat1[4][4],int mat2[4][4],int mat3[4][4])
{
     int i,j;
     for(i=0;i<4;i++)
                     for(j=0;j<4;j++)
                                     mat3[i][j]=mat1[i][j]-mat2[i][j];
}
void multiplicacion(int mat1[4][4],int mat2[4][4],int mat3[4][4])
{
     int i,j,k,suma;
     if(4==4)
     {
            for(i=0;i<4;i++)
                           for(j=0;j<4;j++)
                           {
                                           suma=0;
                                           for(k=0;k<4;k++)
                                                           suma=suma+(mat1[i][k]*mat2[k][j]);
                                           mat3[i][j]=suma;
                           }
     }
     else
     printf("No esta definida la multiplicacion de estas matrices");
}
main()
{
     char resp;
    do
    {
      int A[4][4],B[4][4],C[4][4];
      printf("Lectura de la matriz A:\n");
      leeMatriz(A);
      printf("Lectura de la matriz B:\n");
      leeMatriz(B);
      printf("\nContenido de A:\n");
      ImprimeMat(A);
      printf("\nContenido de B:\n");
      ImprimeMat(B);
      printf("La suma de A + B es:\n");
      suma(A,B,C);
      ImprimeMat(C);
      printf("La resta de A - B es:\n");
      resta(A,B,C);
      ImprimeMat(C);
      printf("La multiplicacion de A * B es:\n");
      multiplicacion(A,B,C);
      ImprimeMat(C);
      printf("\nDesea continuar [s/n]");
       scanf("%s",&resp);
    }
    while(resp=='s'||resp=='S');
      system("pause");
}
